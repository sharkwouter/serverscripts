# Generates a docker container for a gmod server
FROM debian:stable
MAINTAINER Wouter Wijsman <wwijsman@live.nl>
RUN apt-get update && apt-get dist-upgrade
RUN apt-get install --no-install-recommends default-jre-headless wget -y
RUN wget https://s3.amazonaws.com/Minecraft.Download/versions/1.8.8/minecraft_server.1.8.8.jar
